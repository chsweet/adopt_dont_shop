<h1>New Application</h1>
<%= form_with url: "/applications", method: :post, local: true do |f| %>
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <br>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <br>
  <%= f.label :state %>
  <%= f.text_field :state %>
  <br>
  <%= f.label :zip_code, 'Zip Code' %>
  <%= f.number_field :zip_code, maxlength: 5 %>
  <br>
  <%= f.label :description, 'Tell us why you would make a good home' %>
  <%= f.text_field :description %>
  <br>
  <%= f.hidden_field :status, value: 'In Progress' %>

  <%= f.submit "Submit Application" %>
<% end %>
